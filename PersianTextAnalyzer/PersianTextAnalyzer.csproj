<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
	  <GenerateDocumentationFile>True</GenerateDocumentationFile>
	  <DocumentationFile>PersianTextAnalyzer.API.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Dictionaries\fa_IR.aff" />
    <None Remove="Dictionaries\fa_IR.dic" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Dictionaries\fa_IR\fa_IR.aff">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Dictionaries\fa_IR\fa_IR.dic">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hunspell.Native" Version="1.2.5359.26130" />
    <PackageReference Include="NHunspell" Version="1.2.5554.16953" />

    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
    <PackageReference Include="Swashbuckle.AspNetCore.Annotations" Version="6.6.2" />
  </ItemGroup>

</Project>
